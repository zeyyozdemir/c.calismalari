
// klavyeden taban sayısı girilen ikizkenar dik üçgeni yıldız(*) sembolü ile çizdiren program kodu: 

int main() {
	
	int i,j,taban;
	
	printf("Ucgenin taban uzunlugunu girin :");
	scanf("%d",&taban);
	
	for (i=1;i<=taban;i++){
		for (j=1;j<=i;j++){
			printf("*");
			
		}
		printf("\n");
	}
	
	return 0;
}
